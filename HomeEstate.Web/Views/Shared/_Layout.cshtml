<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomeEstate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/HomeEstate.styles.css" asp-append-version="true" />

    
</head>
<body>
    <header>
            <nav>
            <div class="logo">
                <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">Iris Home Estate</a>
            </div>
            <ul class="nav-links">
                <li>
                    <a class="nav-link" asp-area="" asp-controller="Property" asp-action="Index">Properties</a>
                </li>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Property" asp-action="Add">Add Property</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="MyProperty" asp-action="Index">My Properties</a>
                    </li>
                }

                <partial name="_LoginPartial" />
            </ul>
            </nav>
       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h4>About Prime Properties</h4>
                <p>Your trusted partner in real estate, offering premium properties and exceptional service since 2020.</p>
            </div>

            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/Property">Properties for Sale</a></li>
                    <li><a href="#">List Your Property</a></li>
                    <li><a href="#">Privacy policy</a></li>
                    <li><a href="#">Terms of service</a></li>

                </ul>
            </div>

            <div class="footer-section">
                <h4>Find us</h4>
                <div class="social-icons">
                    <span class="social-icon facebook">
                        <i class="fab fa-facebook-f"></i>
                    </span>
                    <span class="social-icon google">
                        <i class="fab fa-google"></i>
                    </span>
                    <span class="social-icon linkedin">
                        <i class="fab fa-linkedin-in"></i>
                    </span>
                    <span class="social-icon reddit">
                        <i class="fab fa-reddit-alien"></i>
                    </span>
                </div>
            </div>

            <div class="footer-section">
                <h4>Contact Us</h4>
                <p>📞 (+359) 881234567</p>
                <p>✉️ info@irishomeestate.com</p>
                <p>📍 Sofia, Bulgaria</p>
            </div>
        </div>

        <div class="footer-bottom">
            <p>&copy; 2025 Iris Home Estate. All rights reserved.</p>
        </div>
    </footer>


    <button id="backToTopBtn" class="back-to-top" aria-label="Back to top">
        <i class="fas fa-arrow-up"></i>
    </button>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
