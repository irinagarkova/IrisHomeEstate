@{
    ViewData["Title"] = "Privacy Policy";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/css/privacy.css" />

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="text-center">
            <h1 class="display-4 fw-bold mb-4">
                <i class="fas fa-shield-alt me-3"></i>
                Privacy Policy
            </h1>
            <p class="lead mb-0">
                Your privacy is our priority. Learn how we protect your personal information.
            </p>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container">
    <div class="privacy-container">
        <div class="privacy-header">
            <h2 class="h3 mb-3">Privacy Policy</h2>
            <p class="text-muted mb-0">
                Last updated: <strong>July 30, 2025</strong>
            </p>
        </div>

        <div class="privacy-content">
            <!-- Introduction -->
            <div class="highlight-box">
                <h3>
                    <i class="fas fa-info-circle me-2"></i>
                    Important to Us
                </h3>
                <p class="mb-0">
                    At Iris Home Estate, we are committed to protecting your personal information and maintaining
                    transparency about how we collect, use, and safeguard your data.
                </p>
            </div>

            <!-- Information Collection -->
            <section class="section-card">
                <div class="section-icon">
                    <i class="fas fa-database"></i>
                </div>
                <h3 class="section-title">1. Collection of Personal Information</h3>
                <p>We collect information when you:</p>
                <ul>
                    <li>Create an account on our platform</li>
                    <li>List a property for sale or rent</li>
                    <li>Contact us for support</li>
                    <li>Use our website (via cookies)</li>
                </ul>
            </section>

            <!-- Data Usage -->
            <section class="section-card">
                <div class="section-icon">
                    <i class="fas fa-cogs"></i>
                </div>
                <h3 class="section-title">2. How We Use Your Data</h3>
                <ul>
                    <li><strong>Service delivery:</strong> To manage your account and properties</li>
                    <li><strong>Communication:</strong> To send important messages and notifications</li>
                    <li><strong>Improvement:</strong> To analyze and enhance our services</li>
                    <li><strong>Security:</strong> To protect against fraud and abuse</li>
                </ul>
            </section>

            <!-- Data Protection -->
            <section class="section-card">
                <div class="section-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <h3 class="section-title">3. Data Protection</h3>
                <p>We apply strict security measures:</p>
                <ul>
                    <li><strong>SSL Encryption:</strong> All data is transmitted securely</li>
                    <li><strong>Secure servers:</strong> Data is stored in protected data centers</li>
                    <li><strong>Restricted access:</strong> Only authorized staff has access</li>
                    <li><strong>Regular backups:</strong> Automatic data backups</li>
                </ul>
            </section>

            <!-- Cookies -->
            <section class="section-card">
                <div class="section-icon">
                    <i class="fas fa-cookie-bite"></i>
                </div>
                <h3 class="section-title">4. Cookies</h3>
                <p>We use cookies for:</p>
                <ul>
                    <li><strong>Essential functions:</strong> Remembering your login status</li>
                    <li><strong>Preferences:</strong> Saving your settings</li>
                    <li><strong>Analytics:</strong> Understanding how you use the site</li>
                </ul>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    You can manage cookies through your browser settings.
                </div>
            </section>

            <!-- User Rights -->
            <section class="section-card">
                <div class="section-icon">
                    <i class="fas fa-user-shield"></i>
                </div>
                <h3 class="section-title">5. Your Rights</h3>
                <p>Under GDPR, you have the right to:</p>
                <div class="row">
                    <div class="col-md-6">
                        <ul>
                            <li><strong>Access:</strong> View your data</li>
                            <li><strong>Correction:</strong> Correct inaccurate data</li>
                            <li><strong>Deletion:</strong> Remove your data</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul>
                            <li><strong>Portability:</strong> Export your data</li>
                            <li><strong>Restriction:</strong> Limit processing</li>
                            <li><strong>Objection:</strong> Stop data processing</li>
                        </ul>
                    </div>
                </div>
            </section>

            <!-- Contact -->
            <section class="section-card text-center">
                <div class="section-icon mx-auto">
                    <i class="fas fa-envelope"></i>
                </div>
                <h3 class="section-title">6. Contact</h3>
                <p>If you have any questions about this policy:</p>
                <p>
                    <i class="fas fa-envelope me-2"></i>
                    <strong>privacy@irishomeestate.com</strong>
                </p>
                <p>
                    <i class="fas fa-phone me-2"></i>
                    <strong>+359 881 234 567</strong>
                </p>
                <a href="mailto:privacy@irishomeestate.com" class="btn-modern mt-3">
                    <i class="fas fa-paper-plane me-2"></i>
                    Send Inquiry
                </a>
            </section>

            <!-- Last Updated -->
            <div class="text-center text-muted mt-4 pt-4" style="border-top: 2px solid #ecf0f1;">
                <p>
                    <i class="fas fa-calendar-alt me-2"></i>
                    Last updated: <strong>July 30, 2025</strong>
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Back to Home Button -->
<div class="back-to-home">
    <a asp-controller="Home" asp-action="Index" class="btn-modern">
        <i class="fas fa-arrow-left me-2"></i>
        Back to Home
    </a>
</div>
