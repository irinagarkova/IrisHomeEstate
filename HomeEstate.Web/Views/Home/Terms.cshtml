@{
    ViewData["Title"] = "Terms of Service";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #e74c3c;
        --success-color: #27ae60;
        --warning-color: #f39c12;
        --text-color: #2c3e50;
        --light-gray: #ecf0f1;
        --border-color: #bdc3c7;
        --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --gradient-alt: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.7;
        color: var(--text-color);
    }

    .hero-section {
        background: var(--gradient);
        color: white;
        padding: 4rem 0;
        position: relative;
        overflow: hidden;
        margin: -20px -15px 0 -15px;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.1;
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .terms-container {
        max-width: 900px;
        margin: 0 auto;
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        margin-top: -60px;
        position: relative;
        z-index: 10;
        overflow: hidden;
    }

    .terms-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 3rem;
        text-align: center;
        border-bottom: 3px solid var(--secondary-color);
    }

    .terms-content {
        padding: 3rem;
    }

    .section-card {
        background: #ffffff;
        border: 1px solid #e9ecef;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .section-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 5px;
        height: 100%;
        background: var(--secondary-color);
        transition: width 0.3s ease;
    }

    .section-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }

    .section-card:hover::before {
        width: 100%;
        opacity: 0.05;
    }

    .section-icon {
        width: 60px;
        height: 60px;
        background: var(--gradient);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .section-title {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 1rem;
        font-size: 1.3rem;
    }

    .highlight-box {
        background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin: 2rem 0;
        text-align: center;
    }

    .warning-box {
        background: linear-gradient(135deg, #fdcb6e 0%, #e17055 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin: 2rem 0;
        text-align: center;
    }

    .info-box {
        background: linear-gradient(135deg, #00b894 0%, #00a085 100%);
        color: white;
        padding: 1.5rem;
        border-radius: 10px;
        margin: 1.5rem 0;
    }

    .btn-modern {
        background: var(--gradient);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .btn-modern:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        color: white;
        text-decoration: none;
    }

    .btn-secondary {
        background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
    }

    .table-of-contents {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 3rem;
    }

    .toc-item {
        display: block;
        color: var(--secondary-color);
        text-decoration: none;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        margin-bottom: 0.5rem;
        border-left: 4px solid transparent;
    }

    .toc-item:hover {
        background: var(--secondary-color);
        color: white;
        transform: translateX(10px);
        border-left-color: white;
        text-decoration: none;
    }

    .terms-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .term-card {
        background: white;
        border: 2px solid #e9ecef;
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .term-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: var(--gradient);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .term-card:hover {
        border-color: var(--secondary-color);
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }

    .term-card:hover::before {
        transform: scaleX(1);
    }

    .term-icon {
        width: 80px;
        height: 80px;
        background: var(--gradient);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
        margin: 0 auto 1.5rem;
        transition: transform 0.3s ease;
    }

    .term-card:hover .term-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .contact-section {
        background: var(--light-gray);
        padding: 3rem;
        border-radius: 15px;
        text-align: center;
        margin-top: 3rem;
    }

    .contact-info {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
        margin-top: 2rem;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--primary-color);
        font-weight: 500;
    }

    .back-to-home {
        text-align: center;
        margin: 3rem 0;
    }

    .last-updated {
        text-align: center;
        color: #7f8c8d;
        font-style: italic;
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 2px solid #ecf0f1;
    }

    .scroll-indicator {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: rgba(52, 152, 219, 0.2);
        z-index: 1000;
    }

    .scroll-progress {
        height: 100%;
        background: var(--secondary-color);
        width: 0%;
        transition: width 0.1s ease;
    }

    .legal-notice {
        background: linear-gradient(135deg, #fd79a8 0%, #fdcb6e 100%);
        color: white;
        padding: 1.5rem;
        border-radius: 10px;
        margin: 2rem 0;
        border-left: 5px solid #fff;
    }

    .acceptance-box {
        background: linear-gradient(135deg, #00b894 0%, #00cec9 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin: 2rem 0;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .acceptance-box::before {
        content: '✓';
        position: absolute;
        top: -20px;
        right: -20px;
        font-size: 6rem;
        opacity: 0.1;
    }

    @@media (max-width: 768px) {
        .hero-section {
            padding: 2rem 0;
        }
        
        .terms-container {
            margin: 1rem;
            margin-top: -30px;
            border-radius: 15px;
        }
        
        .terms-header,
        .terms-content {
            padding: 2rem 1.5rem;
        }
        
        .contact-info {
            flex-direction: column;
            gap: 1rem;
        }

        .terms-grid {
            grid-template-columns: 1fr;
        }
    }

    .fade-in {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease, transform 0.6s ease;
    }

    .fade-in.visible {
        opacity: 1;
        transform: translateY(0);
    }
</style>

