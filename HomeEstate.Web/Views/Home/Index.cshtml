<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomeEstate - Buy, Sell & Lease</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

</head>
<body>
    <!-- Header -->

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <div class="hero-text">
                <h1>Find Your Dream Property</h1>
                <p>Discover the perfect home from our extensive collection of properties for sale</p>
                <div style="display: flex; gap: 1rem;">
                    <a href="#listings" class="btn">Browse Properties</a>
                    <a href="#contact" class="btn">Get Started</a>
                </div>
            </div>
            <div class="search-form">
                <div class="search-tabs">
                    <button class="tab active">Buy</button>
                    <button class="tab active">Rent</button>
                </div>
                <form>
                    <div class="search-grid">
                        <div class="form-group">
                            <label>Location</label>
                            <input type="text" placeholder="City">
                        </div>
                        <div class="form-group">
                            <label>Property Type</label>
                            <select>
                                <option>All Types</option>
                                <option>House</option>
                                <option>Apartment</option>
                                <option>Condo</option>
                                <option>Commercial</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Max Price</label>
                            <input type="text" placeholder="$0">
                        </div>
                    </div>
                    <button type="submit" class="search-btn">Search Properties</button>
                </form>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats">
        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-number">500+</div>
                <div class="stat-label">Properties Listed</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">1,200+</div>
                <div class="stat-label">Happy Customers</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">98%</div>
                <div class="stat-label">Satisfaction Rate</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">20+</div>
                <div class="stat-label">Expert Agents</div>
            </div>
        </div>
    </section>

    <!-- Property Listings -->
    <section class="listings" id="listings">
        <div class="section-header">
            <h2>Featured Properties</h2>
            <p>Hand-picked properties that offer exceptional value</p>
        </div>
        <div class="property-grid">
            <div class="property-card">
                <div class="property-image">
                    <span class="property-badge">For Sale</span>
                </div>
                <div class="property-details">
                    <div class="property-price">$450,000</div>
                    <h3 class="property-title">Modern Family Home</h3>
                    <p class="property-location">📍 Downtown District</p>
                    <div class="property-features">
                        <span class="feature">🛏️ 4 Beds</span>
                        <span class="feature">🚿 3 Baths</span>
                        <span class="feature">📐 2,500 sqft</span>
                    </div>
                </div>
            </div>
            <div class="property-card">
                <div class="property-image">
                    <span class="property-badge">For Lease</span>
                </div>
                <div class="property-details">
                    <div class="property-price">$2,500/mo</div>
                    <h3 class="property-title">Luxury Apartment</h3>
                    <p class="property-location">📍 City Center</p>
                    <div class="property-features">
                        <span class="feature">🛏️ 2 Beds</span>
                        <span class="feature">🚿 2 Baths</span>
                        <span class="feature">📐 1,200 sqft</span>
                    </div>
                </div>
            </div>
            <div class="property-card">
                <div class="property-image">
                    <span class="property-badge">For Sale</span>
                </div>
                <div class="property-details">
                    <div class="property-price">$650,000</div>
                    <h3 class="property-title">Suburban Villa</h3>
                    <p class="property-location">📍 Green Hills</p>
                    <div class="property-features">
                        <span class="feature">🛏️ 5 Beds</span>
                        <span class="feature">🚿 4 Baths</span>
                        <span class="feature">📐 3,800 sqft</span>
                    </div>
                </div>
            </div>
        </div>
        <div style="text-align: center;">
            <a href="#" class="btn">View All Properties</a>
        </div>
    </section>

    <!-- Services -->
    <section class="services">
        <div class="section-header">
            <h2>Our Services</h2>
            <p>Complete real estate solutions tailored to your needs</p>
        </div>
        <div class="services-grid">
            <div class="service-card">
                <div class="service-icon">🏠</div>
                <h3>Apartments</h3>
                <p>From condos to spacey apartments. You think of it, we have it.</p>
            </div>
            <div class="service-card">
                <div class="service-icon">🔑</div>
                <h3>Houses & Villas</h3>
                <p>Your dream house or luxurious villas, all tailored to your needs.</p>
            </div>
            <div class="service-card">
                <div class="service-icon">📊</div>
                <h3>Investment properties</h3>
                <p>Making money from your property? Not a dream, but an opportunity with our premium selection.</p>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
        <div class="cta-content">
            <h2>Ready to Make Your Move?</h2>
            <p>Whether you're buying or selling, we're here to help you every step of the way</p>
            <div class="cta-buttons">
                <a href="#" class="btn-white">Start Searching</a>
              
            </div>
        </div>
    </section>

    <!-- Footer -->
    
    <script>
        // Tab switching functionality
        const tabs = document.querySelectorAll('.tab');
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
            });
        });

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Simple form validation
        document.querySelector('.search-form form').addEventListener('submit', (e) => {
            e.preventDefault();
            alert('Search functionality would be implemented in the MVC version');
        });



    </script>
</body>
</html>