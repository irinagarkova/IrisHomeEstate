@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/resetPassword.css" />
</head>
<body>
    <div class="reset-password-container">
        <div class="icon">
            <i class="fas fa-lock-open"></i>
        </div>

        <h1 class="title">Нова парола</h1>
        <p class="subtitle">
            Въведете новата си парола за акаунта с имейл: <strong>@Model.Email</strong>
        </p>

        <div class="password-requirements">
            <i class="fas fa-shield-alt"></i>
            <strong>Изисквания за паролата:</strong>
            <ul>
                <li id="req-length">Поне 6 символа</li>
                <li id="req-letter">Поне една буква</li>
                <li id="req-number">Поне една цифра (препоръчително)</li>
                <li id="req-special">Специален символ (препоръчително)</li>
            </ul>
        </div>

        <form asp-action="ResetPassword" method="post" id="resetPasswordForm">
            <input asp-for="Token" type="hidden" />
            <input asp-for="Email" type="hidden" />
            
            <div asp-validation-summary="All" class="validation-summary" style="display: none;"></div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">
                    <i class="fas fa-lock"></i> Нова парола
                </label>
                <div class="password-input-wrapper">
                    <input asp-for="Password" type="password" class="form-input" id="password" placeholder="Въведете нова парола" />
                    <button type="button" class="password-toggle" onclick="togglePassword('password', this)">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <div class="password-strength">
                    <div class="password-strength-bar" id="strengthBar"></div>
                </div>
                <div class="password-strength-text" id="strengthText">Въведете парола</div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">
                    <i class="fas fa-lock"></i> Потвърдете паролата
                </label>
                <div class="password-input-wrapper">
                    <input asp-for="ConfirmPassword" type="password" class="form-input" id="confirmPassword" placeholder="Потвърдете новата парола" />
                    <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword', this)">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn" id="submitBtn" disabled>
                <i class="fas fa-check"></i>
                Променете паролата
            </button>
        </form>

        <div class="back-link">
            <a asp-action="Login">
                <i class="fas fa-arrow-left"></i>
                Назад към влизане
            </a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('resetPasswordForm');
            const submitBtn = document.getElementById('submitBtn');
            const passwordInput = document.getElementById('password');
            const confirmPasswordInput = document.getElementById('confirmPassword');
            const strengthBar = document.getElementById('strengthBar');
            const strengthText = document.getElementById('strengthText');
            const originalBtnText = submitBtn.innerHTML;

            // Password strength checker
            passwordInput.addEventListener('input', function() {
                const password = this.value;
                const strength = checkPasswordStrength(password);
                updatePasswordStrength(strength);
                validateForm();
            });

            confirmPasswordInput.addEventListener('input', validateForm);

            function checkPasswordStrength(password) {
                let score = 0;
                let feedback = [];

                // Length check
                if (password.length >= 6) {
                    score += 25;
                    document.getElementById('req-length').classList.add('requirement-met');
                } else {
                    document.getElementById('req-length').classList.remove('requirement-met');
                }

                // Letter check
                if (/[a-zA-Z]/.test(password)) {
                    score += 25;
                    document.getElementById('req-letter').classList.add('requirement-met');
                } else {
                    document.getElementById('req-letter').classList.remove('requirement-met');
                }

                // Number check
                if (/\d/.test(password)) {
                    score += 25;
                    document.getElementById('req-number').classList.add('requirement-met');
                } else {
                    document.getElementById('req-number').classList.remove('requirement-met');
                }

                // Special character check
                if (/[^a-zA-Z0-9]/.test(password)) {
                    score += 25;
                    document.getElementById('req-special').classList.add('requirement-met');
                } else {
                    document.getElementById('req-special').classList.remove('requirement-met');
                }

                return { score, feedback };
            }

            function updatePasswordStrength(strength) {
                const { score } = strength;
                strengthBar.style.width = score + '%';
                
                if (score === 0) {
                    strengthBar.className = 'password-strength-bar';
                    strengthText.textContent = 'Въведете парола';
                } else if (score <= 25) {
                    strengthBar.className = 'password-strength-bar strength-weak';
                    strengthText.textContent = 'Слаба парола';
                } else if (score <= 50) {
                    strengthBar.className = 'password-strength-bar strength-fair';
                    strengthText.textContent = 'Средна парола';
                } else if (score <= 75) {
                    strengthBar.className = 'password-strength-bar strength-good';
                    strengthText.textContent = 'Добра парола';
                } else {
                    strengthBar.className = 'password-strength-bar strength-strong';
                    strengthText.textContent = 'Силна парола';
                }
            }

            function validateForm() {
                const password = passwordInput.value;
                const confirmPassword = confirmPasswordInput.value;
                const isValid = password.length >= 6 && password === confirmPassword;
                
                submitBtn.disabled = !isValid;
                
                if (password && confirmPassword && password !== confirmPassword) {
                    confirmPasswordInput.style.borderColor = '#dc3545';
                } else {
                    confirmPasswordInput.style.borderColor = '#e9ecef';
                }
            }

            form.addEventListener('submit', function(e) {
                // Show loading state
                submitBtn.classList.add('loading');
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Променяне...';
                submitBtn.disabled = true;

                // Re-enable after timeout as fallback
                setTimeout(() => {
                    submitBtn.classList.remove('loading');
                    submitBtn.innerHTML = originalBtnText;
                    submitBtn.disabled = false;
                }, 10000);
            });
        });

        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'fas fa-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'fas fa-eye';
            }
        }
    </script>
</body>
</html>