@* _Pagination.cshtml for Users *@
@using HomeEstate.Services.Core.Dtos
@model Pagination<ApplicationUserWithRoleDto>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Users pagination">
        <ul class="pagination justify-content-center mb-0">
            <!-- Previous Page -->
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="#" onclick="loadUsers(@(Model.CurrentPage - 1)); return false;"
                       data-bs-toggle="tooltip" title="Previous Page">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">
                        <i class="fas fa-chevron-left"></i>
                    </span>
                </li>
            }

            <!-- Page Numbers -->
            @{
                var startPage = Math.Max(1, Model.CurrentPage - 2);
                var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
            }

            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="#" onclick="loadUsers(1); return false;">1</a>
                </li>
                @if (startPage > 2)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="#" onclick="loadUsers(@i); return false;">@i</a>
                </li>
            }

            @if (endPage < Model.TotalPages)
            {
                @if (endPage < Model.TotalPages - 1)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link" href="#" onclick="loadUsers(@Model.TotalPages); return false;">@Model.TotalPages</a>
                </li>
            }

            <!-- Next Page -->
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="#" onclick="loadUsers(@(Model.CurrentPage + 1)); return false;"
                       data-bs-toggle="tooltip" title="Next Page">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">
                        <i class="fas fa-chevron-right"></i>
                    </span>
                </li>
            }
        </ul>
    </nav>

    <!-- Pagination Info -->
    <div class="d-flex justify-content-between align-items-center mt-3">
        <small class="text-muted">
            Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to
            @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems)) of
            @Model.TotalItems.ToString("N0") users
        </small>
        <small class="text-muted">
            Page @Model.CurrentPage of @Model.TotalPages
        </small>
    </div>
}
else if (Model.TotalItems > 0)
{
    <div class="text-center">
        <small class="text-muted">Showing all @Model.TotalItems users</small>
    </div>
}